<resources>
    <!-- Base application theme. -->
    <style name="Theme.TFL" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/Theme.TFL.ActionBar</item>
    </style>

    <style name="Theme.TFL.Splash" parent="Theme.TFL.NoActionBar">
        <item name="android:windowBackground">@color/green</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TFL.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TFL.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/gray_dark</item>
    </style>
</resources>

